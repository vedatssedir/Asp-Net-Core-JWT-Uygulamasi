@model ProductList

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}



<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <form action="@Url.Action("Update", "Home")" method="post">
                <div class="form-group row">
                    <label class="col-form-label col-md-3">Ürün Adı</label>
                    <div class="col-md-9">
                        <input type="hidden" asp-for="Id">
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Ürün Güncelle</button>
                <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Ürün Listesi</a>
            </form>

        </div>
    </div>
</div>